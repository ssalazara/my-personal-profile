---
// src/components/organisms/Hero.astro
import { urlFor, getSanityClient } from '@/lib/sanityClient.ts';

export interface Props {
  title: string;
  subtitle?: string;
  image?: any; // Sanity image object
  imagePosition?: 'left' | 'right';
}

const { title, subtitle, image, imagePosition = 'right' } = Astro.props;

// We need a client instance to build the image URL
const client = getSanityClient({
  projectId: import.meta.env.PUBLIC_SANITY_PROJECT_ID,
  dataset: import.meta.env.PUBLIC_SANITY_DATASET,
});

// Generate an optimized image URL
// .width(600) and .auto('format') are examples of optimization
const imageUrl = image ? urlFor(image, client).width(600).auto('format').url() : null;
---
<section class="hero">
  <div class:list={["hero__container", `hero__container--image-${imagePosition}`]}>
    
    <div class="hero__content">
      <h1 class="hero__title">{title}</h1>
      {subtitle && <p class="hero__subtitle">{subtitle}</p>}
    </div>

    {imageUrl && (
      <div class="hero__image-wrapper">
        <img src={imageUrl} alt={title} class="hero__image" />
      </div>
    )}

  </div>
</section>

<style>
  .hero {
    background-color: var(--color-background-card);
    border-bottom: 1px solid var(--color-border-primary);
    padding: 4rem 1.5rem;
  }

  .hero__container {
    max-width: 960px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr; /* Default for mobile */
    gap: 2rem;
    align-items: center;
  }
  
  /* On larger screens, use a 2-column layout */
  @media (min-width: 768px) {
    .hero__container {
      grid-template-columns: 1fr 1fr;
    }
  }

  .hero__content {
    text-align: center;
  }
  
  @media (min-width: 768px) {
    .hero__content {
      text-align: left; /* Align text to the left in columns */
    }
  }

  /* This is how we control the order */
  .hero__container--image-right .hero__image-wrapper {
    order: 2; /* On flex/grid, this moves the item to the end */
  }
  @media (min-width: 768px) {
    .hero__container--image-left .hero__image-wrapper {
      grid-column: 1;
    }
    .hero__container--image-left .hero__content {
      grid-column: 2;
    }
  }
  
  .hero__title {
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    color: var(--color-text-primary);
    margin: 0 0 1rem;
    line-height: 1.1;
  }

  .hero__subtitle {
    font-size: 1.125rem;
    color: var(--color-text-secondary);
    max-width: 60ch;
    margin-left: auto;
    margin-right: auto;
  }
  @media (min-width: 768px) {
    .hero__subtitle {
      margin-left: 0;
    }
  }
  
  .hero__image-wrapper {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .hero__image {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    box-shadow: 0 10px 15px -3px rgba(0,0,0,0.1), 0 4px 6px -2px rgba(0,0,0,0.05);
  }
</style>