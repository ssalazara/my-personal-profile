---
// src/components/organisms/Hero.astro
import { urlFor, getSanityClient } from '@/lib/sanityClient.ts';

export interface Props {
  title: string;
  subtitle?: string;
  image?: any;
  imagePosition?: 'left' | 'right';
}

const { title, subtitle, image, imagePosition = 'right' } = Astro.props;

const client = getSanityClient({
  projectId: import.meta.env.PUBLIC_SANITY_PROJECT_ID,
  dataset: import.meta.env.PUBLIC_SANITY_DATASET,
});

const imageUrl = image ? urlFor(image, client).width(600).auto('format').url() : null;
---

<section class="hero">
  <div class:list={["hero-container", `hero-container--image-${imagePosition}`]}>
    
    <div class="hero-content">
      <h1 class="hero-title">{title}</h1>
      {subtitle && <p class="hero-subtitle">{subtitle}</p>}
    </div>

    {imageUrl && (
      <div class="hero-image-wrapper">
        <img src={imageUrl} alt={title} class="hero-image" />
      </div>
    )}

  </div>
</section>

<style>
  .hero {
    background-color: var(--color-background-card);
    border-bottom: 1px solid var(--color-border-primary);
    padding: 4rem 1.5rem;
  }

  .hero-container {
    max-width: 960px;
    margin: 0 auto;
    display: flex;
    flex-wrap: wrap; /* Ensures mobile stacking */
    gap: 2rem;
    align-items: center; /* Vertically centers the text and image */
  }
  
  .hero-content,
  .hero-image-wrapper {
    /* Mobile-first: each item takes full width and grows */
    flex: 1 1 100%;
  }

  @media (min-width: 768px) {
    .hero-content,
    .hero-image-wrapper {
      /* Desktop: each item is a flexible column that can grow and shrink */
      flex: 1 1 0;
    }

    .hero-content {
      text-align: left;
    }
  }

  /* 
   * ===============================================
   * THE MIRROR EFFECT
   * ===============================================
   * This is the only rule needed to flip the layout.
   */
  @media (min-width: 768px) {
    .hero-container--image-left .hero-image-wrapper {
      order: -1; 
    }
  }
  
  /* --- Child element styling --- */
  .hero-title, .hero-subtitle, .hero-image {
    margin: 0; /* Reset margins for clean alignment */
  }

  .hero-title {
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    color: var(--color-text-primary);
    line-height: 1.1;
    margin-bottom: 1rem;
  }

  .hero-subtitle {
    font-size: 1.125rem;
    color: var(--color-text-secondary);
    max-width: 60ch;
  }

  .hero-image {
    width: 100%;
    height: auto;
    border-radius: 8px;
    box-shadow: 0 10px 15px -3px rgba(0,0,0,0.1), 0 4px 6px -2px rgba(0,0,0,0.05);
    display: block; /* Removes any extra space below the image */
  }
</style>