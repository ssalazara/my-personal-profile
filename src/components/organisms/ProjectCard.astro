---
// src/components/organisms/ProjectCard.astro
export interface Props {
  title: string;
  description?: string;
  url?: string;
}

const { title, description, url } = Astro.props;
---
<article class="project-card">
  <h3 class="project-card__title">{title}</h3>
  {description && <p class="project-card__description">{description}</p>}
  {url && <a href={url} class="project-card__link" target="_blank" rel="noopener noreferrer">View Project &rarr;</a>}
</article>

<style>
  .project-card {
    background: var(--color-background-card); /* CHANGED from white */
    padding: 1.5rem;
    border-radius: 8px;
    /* Using rgba with a CSS variable is a bit tricky, so we'll use a solid border for now */
    border: 1px solid var(--color-border-primary);
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05), 0 2px 4px -2px rgba(0, 0, 0, 0.05);
    transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
  }
  .project-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.07), 0 4px 6px -4px rgba(0, 0, 0, 0.07);
  }
  .project-card__title {
    margin-top: 0;
    color: var(--color-text-primary); /* CHANGED from #111 */
    font-size: 1.25rem;
  }
  .project-card__description {
    color: var(--color-text-secondary); /* CHANGED from #555 */
    line-height: 1.6;
  }
  .project-card__link {
    display: inline-block;
    margin-top: 1rem;
    color: var(--color-text-link); /* CHANGED from #007bff */
    text-decoration: none;
    font-weight: bold;
  }
  .project-card__link:hover {
    text-decoration: underline;
    color: var(--color-text-link-hover); /* ADDED hover color */
  }
</style>