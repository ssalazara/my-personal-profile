---
// src/components/organisms/ProjectCard.astro
export interface Props {
  title: string;
  description?: string; // Optional description
  url?: string; // Optional URL
}

const { title, description, url } = Astro.props;
---
<article class="project-card">
  <h3 class="project-card__title">{title}</h3>
  {description && <p class="project-card__description">{description}</p>}
  {url && <a href={url} class="project-card__link" target="_blank" rel="noopener noreferrer">View Project &rarr;</a>}
</article>

<style>
  .project-card {
    background: white;
    padding: 1.5rem;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
  }
  .project-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 12px rgba(0,0,0,0.15);
  }
  .project-card__title {
    margin-top: 0;
    color: #111;
    font-size: 1.25rem;
  }
  .project-card__description {
    color: #555;
    line-height: 1.6;
  }
  .project-card__link {
    display: inline-block;
    margin-top: 1rem;
    color: #007bff;
    text-decoration: none;
    font-weight: bold;
  }
  .project-card__link:hover {
    text-decoration: underline;
  }
</style>