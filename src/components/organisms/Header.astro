---
// src/components/organisms/Header.astro
import SiteLogo from '@/components/atoms/SiteLogo.astro';
import PrimaryNavigation from '@/components/molecules/PrimaryNavigation.astro';
---
<header class="site-header">
  <div class="site-header__container">
    <SiteLogo text="SSA" />
    <PrimaryNavigation />
  </div>
</header>

<style>
  .site-header {
    background: var(--color-background-card);
    border-bottom: 1px solid var(--color-border-primary);
    position: sticky;
    top: 0;
    z-index: 10;
    width: 100%;
  }

  /* 
    THIS IS THE CORRECTED CONTAINER STYLE 
  */
  .site-header__container {
    /* 1. Center the container itself on the page */
    max-width: 960px;
    margin-left: auto;
    margin-right: auto;
    
    /* 2. Arrange the items (logo and nav) inside the container */
    padding: 1rem 1.5rem;
    display: flex;
    align-items: center; /* Vertically align items */
    justify-content: space-between; /* Push items to opposite ends */
  }
</style>